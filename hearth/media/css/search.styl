@import 'lib';

.no-results {
    font-size: 24px;
    font-weight: bold;
    line-height: 1.3;
    opacity: .5;
    padding: 20px;
    text-align: center;
}

b[data-href] {
    color: $link-dark;
    cursor: pointer;
    font-weight: 600;
    &:hover {
        text-decoration: underline;
    }
}

.screenshot .deferred,
.mkt-tile .icon.deferred {
    height: 60px;
    left: 13px;
    margin-right: 38px;
    opacity: .2;
    position: relative;
    top: 0;
    width: 42px;
}

@media $at-least-desktop {
    #search-results .listing > li {
        .shots .next, .shots .prev {
            opacity: 0;
        }
        &:hover {
            .shots .next, .shots .prev {
                opacity: 1;
            }
        }
    }
}
